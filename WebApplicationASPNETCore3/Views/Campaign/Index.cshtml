@model CRM.Models.ViewModels.CampaignPagination

@{

    ViewData["Title"] = "Campaign";
}
<link rel="stylesheet" href="~/css/section.css" />


@*<h2>Customer</h2>*@

<div>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>


<section>


    <aside>
        <div>
            @{
                Html.RenderPartial("../Shared/_CampaignLeftBarMenuPartial");
            }
        </div>
        


    </aside>


    <main>
       
        @{
            if (Model != null)
            {

                <div class="row">
                    <div id="campaignList" class="col-lg-12">
                        <table id="tblCampaigns" class="display table">
                            <thead>
                                <tr>
                                    <th>
                                        Id
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Start Date
                                    </th>
                                    <th>
                                        End Date
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.Campaigns)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <label>@item.StartDate.ToString("dd/MM/yyyy")</label>
                                        </td>
                                        <td>
                                            <label>@item.EndDate.ToString("dd/MM/yyyy")</label>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />


                        <!-- pager -->
                        @if (Model.Pager.EndPage > 1)
                        {
                            <ul class="pagination">
                                @if (Model.Pager.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        @Html.ActionLink("First", "Index", new { currentPage = 1 }, new { @class = "page-link" })
                                    </li>
                                    <li class="page-item">
                                        @Html.ActionLink("Previous", "Index", new { currentPage = (Model.Pager.CurrentPage - 1) }, new { @class = "page-link" })
                                    </li>
                                }

                                @for (int p = Model.Pager.StartPage; p <= Model.Pager.EndPage; p++)
                                {
                                    <li class="page-item @(p == Model.Pager.CurrentPage ? "active" : "")">
                                        @Html.ActionLink(p.ToString(), "Index", new { currentPage = p }, new { @class = "page-link" })
                                    </li>
                                }

                                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                {
                                    <li class="page-item">
                                        @Html.ActionLink("Next", "Index", new { currentPage = (Model.Pager.CurrentPage + 1) }, new { @class = "page-link" })
                                    </li>
                                    <li class="page-item">
                                        @Html.ActionLink("Last", "Index", new { currentPage = (Model.Pager.TotalPages) }, new { @class = "page-link" })
                                    </li>
                                }
                            </ul>
                        }

                        <input type="hidden" id="cp_pageSize" value="@Model.Pager.PageSize">
                        <input type="hidden" id="cp_currentPage" value="@Model.Pager.CurrentPage">

                    </div>
                </div>

            }
        }



    </main>



   

</section>


<script src="~/js/campaign.js" asp-append-version="true"></script>
