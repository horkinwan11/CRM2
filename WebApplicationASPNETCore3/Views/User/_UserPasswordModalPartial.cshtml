@model CRM.Models.ViewModels.UserManagePasswordViewModel

@{
    //ViewData["Title"] = "Change Password";
    var user = ViewData["User"] as CRM.Models.Entities.User;
}

@if (user == null)
{
	<div>
		<div class="alert alert-danger" id="form-container">
			<span class="glyphicon glyphicon-remove-sign"></span>
			<span>Unable to load data.</span>
		</div>
	</div>
}
else
{
	<div>
		<h5>User - @(String.IsNullOrEmpty(user.Email) ? "???" : user.Email)</h5>
		<form id="myFormChangePassword">
			@Html.AntiForgeryToken()
			@Html.HiddenFor(model => model.Id)
			<div class="form-horizontal">
				@*<h4>@($"{user.FirstName} {user.LastName}")</h4>*@
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="Password" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="ConfirmPassword" class="form-control" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
				</div>
			</div>
		</form>

	</div>

}