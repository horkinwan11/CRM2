@model CRM.Models.ViewModels.TeamDistributionViewModel

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div id="teamDistributionList" class="col-lg-12">
            <div class="col-lg-12">
                <div class="row" style="width:80%;">
                    <div class="col-12">Total : @Model.TotalQuantity</div>
                    <div class="col-12">Available : @Model.UnusedQuantity</div>
                    <div class="col-12">
                        <div class="progress" style="width:100%; max-width:100%; font-size: medium">
                            <div class="progress-bar  bg-success" role="progressbar" style="width: @(Model.UsedQuantityPerc.ToString("F"))%;" aria-valuenow="@(Model.UsedQuantityPerc.ToString("F"))" aria-valuemin="0" aria-valuemax="100">@(Model.UsedQuantity)</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12"> <br /></div>

            <table id="tblTeamDistribution" class="display table">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.TeamDistributions)
                    {

                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.TId)
                            </td>
                            <td id="tdN_@item.TId">
                                @Html.DisplayFor(modelItem => item.TName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                <button onclick="teamDistributionDelete(@item.TId, '@item.TLevel');" class="btn btn-danger">Delete</button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <button onclick="teamDistributionNew()" class="btn btn-primary">Add</button>



        </div>
        </div>


